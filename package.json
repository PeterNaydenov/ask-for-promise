{
  "name": "ask-for-promise",
  "description": "promise utility library",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./dist/askForPromise.umd.js",
  "type": "module",
  "exports": {
    ".": {
            "import": "./dist/askForPromise.esm.mjs",
            "require": "./dist/askForPromise.cjs",
            "default": "./dist/askForPromise.umd.js"
    },
    "./package.json": "./package.json",
    "./README.md": "./README.md",
    "./LICENSE": "./LICENSE",
    "./src/*": "./src/*",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha test",
    "build": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterNaydenov/ask-for-promise.git"
  },
  "homepage": "https://github.com/PeterNaydenov/ask-for-promise#readme",
  "bugs": {
    "url": "https://github.com/PeterNaydenov/ask-for-promise/issues"
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "chai": "5.0.3",
    "mocha": "10.2.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.9.6"
  },

  "directories": {
    "test": "test"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "files": [
    "src/*.js",
    "LICENSE"
  ],
  "keywords": [
    "promise",
    "sequence",
    "paralel",
    "timout",
    "ttl",
    "decoupled promise"
  ]
}
