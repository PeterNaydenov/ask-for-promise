{
  "name": "ask-for-promise",
  "description": "promise utility library",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Peter Naydenov",
  "type": "module",
  "homepage": "https://github.com/PeterNaydenov/ask-for-promise#readme",
  "bugs": {
    "url": "https://github.com/PeterNaydenov/ask-for-promise/issues"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha test"
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "chai": "5.0.0",
    "mocha": "10.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterNaydenov/ask-for-promise.git"
  },
  "main": "src/askForPromise.js",
  "module": "./src/askForPromise.js",
  "exports": {
    ".": {
      "require": "./src/askForPromise.js",
      "import": "./src/askForPromise.js",
      "default": "./src/askForPromise.js"
    }
  },
  "directories": {
    "test": "test"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "files": [
    "src/*.js",
    "LICENSE"
  ],
  "keywords": [
    "promise",
    "sequence",
    "paralel",
    "timout",
    "ttl",
    "decoupled promise"
  ]
}
