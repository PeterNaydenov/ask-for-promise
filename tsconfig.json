{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "allowJs": true,
      "declaration": false,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "target": "ES2020",
      "module": "ES2020"
    }
  }